<html>

<head>
  <title>welcome to the city bank</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<body class="container">
  <div class="page-header">
    <h1>CITY BANK</h1>
  </div>

  <nav class="navbar navbar-default">
    <div class="container-fluid">

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/login">Home</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <li><a href="/dashboard">Dashboard</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <!-- <li><a href="/login">Log In</a></li> -->
          <li><a href="/logout">Log Out</a></li>
        </ul>
      </div>
    </div>
  </nav>




  <div class="container mt-2 custom_view">
    <div class="container mt-4 custom_view_left text-center">
      <i class="far fa-user" style="font-size: 7rem;"></i>

    </div>
    <div class="container mt-4 custom_view_right">
      <% docs.forEach((e)=> {%>
        <h4>Name: <%= e.nusername %>
        </h4>
        <h4>Email: <%= e.nemail %>
        </h4>
        <h4>Mobile: <%= e.mobile %>
        </h4>
        <h4>Balence: <%= e.amount %>
        </h4>

        <%}) %>
    </div>

  </div>
  <!-- Reciver -->
  <div class="container bg-primary  text-center p-2 mt-3">
    <h3 class="text-light fw-4">Receiver Details</h3>
  </div>
  <div class="container">
    <form action="/transact" method="POST">
      <div class="form-group mt-3">
        <label for="exampleInputEmail1">From</label>
        <% docs.forEach((e)=> {%>
          <input type="hidden" name="SenderID" value="<%= e._id %>">
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="SenderName"
            placeholder="Enter User Name" readonly value="<%= e.nusername %>">
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            name="SenderEmail" placeholder="Enter User Email" readonly value="<%= e.nemail %>">

          <%}) %>



      </div>
      <div class="form-group  mt-3">
        <label for="exampleInputEmail1">TO</label>
        <select class="form-select" name="receiverName">
          <option selected>Select Receiver Name</option>
          <% records.forEach((e)=>{%>

            <option>
              <%= e.nusername %>
            </option>
            <%}) %>

        </select>

      </div>
      <div class="form-group  mt-3">
        <select class="form-select" name="receiverEmail">
          <option selected>Select Receiver Email</option>
          <% records.forEach((e)=>{%>
            <option>
              <%= e.nemail %>
            </option>

            <%}) %>

        </select>

      </div>
      <div class="form-group  mt-3">
        <label for="exampleInputEmail1">Amount</label>



        <input type="Amount" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
          name="transferAmount" placeholder="Enter Amount" required>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>


</body>

</html>
</body>

</html>